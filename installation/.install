post_install() {
    if [ "$1" = "upgrade" ] || [ "$1" = "install" ]; then
        systemctl daemon-reload
        systemctl enable local-dns.service
        systemctl start local-dns.service
    fi
}

pre_remove() {
    if [ "$1" = "remove" ]; then
        systemctl disable local-dns.service
        systemctl stop local-dns.service
    fi
}

