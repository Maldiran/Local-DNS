[Unit]
Description=Local dns service, defines a mapping between user defined addresses and IP from local network
Required=network-online.target

[Service]
Type=simple
User=root
WorkingDirectory=/usr/local/local_dns
ExecStart=/usr/local/local_dns/main.x
Restart=always
#StandardOutput=append:/var/log/local_dns.log
#StandardError=inherit

[Install]
WantedBy=multi-user.target
